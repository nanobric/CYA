{% extends 'base.html.twig' %}
{% block iconHead %} <i class="gi gi-list"></i>{% endblock iconHead %}
{% block pageTitle %}
    Coin
{% endblock pageTitle %}
{% block subtitle %} Lista {% endblock subtitle %}
{% block action %}
    <div class="block-options pull-right">
        <a href="{{ path('admin_coin_new') }}" data-original-title="Create a new entry"
           class="btn btn-alt btn-sm btn-success" data-toggle="tooltip" title=""><i class="fa fa-asterisk"></i></a>
    </div>
{% endblock action %}
{% block titlePanel %}Monedas registradas{% endblock titlePanel %}
{% block bodyPanel %}
    <table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
        <thead>
        <tr>
            <th>{% trans %}Code{% endtrans %}</th>
            <th>{% trans %}Symbol{% endtrans %}</th>
            <th>{% trans %}Name{% endtrans %}</th>
            <th>{% trans %}Description{% endtrans %}</th>
            <th>{% trans %}Actions{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for coin in coins %}
            <tr>
                <td>{{ coin.code }}</td>
                <td>{{ coin.symbol }}</td>
                <td>{{ coin.name }}</td>
                <td>{{ coin.description }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('admin_coin_show', { 'id': coin.id }) }}"
                           class="btn btn-xs btn-primary">show</a>
                        <a href="{{ path('admin_coin_edit', { 'id': coin.id }) }}"
                           class="btn btn-xs btn-primary">edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock bodyPanel %}
{% block extraJS %}
    <script src="{{ asset('bundles/tscya/js/pages/tablesDatatables.js') }}"></script>
    <script>$(function () {
            TablesDatatables.init();
        });
    </script>
{% endblock extraJS %}
