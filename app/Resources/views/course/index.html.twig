{% extends 'base.html.twig' %}
{% block iconHead %} <i class="gi gi-list"></i>{% endblock iconHead %}
{% block pageTitle %}
    {% trans %}Course{% endtrans %}
{% endblock pageTitle %}
{% block subtitle %} Lista {% endblock subtitle %}
    {% block action %}
        <div class="block-options pull-right">
            <a href="{{ path('admin_course_new') }}" data-original-title="Create a new entry"
               class="btn btn-alt btn-sm btn-success" data-toggle="tooltip" title=""><i class="fa fa-asterisk"></i></a>
        </div>
    {% endblock action %}
        {% block titlePanel %}Cursos registrados{% endblock titlePanel %}
        {% block bodyPanel %}
            <table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
                <thead>
                <tr>
                    <th>{% trans %}Name{% endtrans %}</th>
                    <th>{% trans %}Description{% endtrans %}</th>
                    <th>{% trans %}Enable{% endtrans %}</th>
                    <th>{% trans %}Headquarter{% endtrans %}</th>
                    <th>{% trans %}Actions{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for course in courses %}
                    <tr>
                        <td>{{ course.name }}</td>
                        <td>{{ course.description }}</td>
                        <td>{% if course.enable %}Yes{% else %}No{% endif %}</td>
                        <td>{{ course.headquarter.name }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('admin_course_show', { 'id': course.id }) }}"
                                   class="btn btn-xs btn-primary">{% trans %}show{% endtrans %}</a>
                            </div>
                            <div class="btn-group">
                                <a href="{{ path('admin_course_edit', { 'id': course.id }) }}"
                                   class="btn btn-xs btn-primary">{% trans %}edit{% endtrans %}</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endblock bodyPanel %}
{% block extraJS %}
    <script src="{{ asset('bundles/tscya/js/pages/tablesDatatables.js') }}"></script>
    <script>$(function () {
            TablesDatatables.init();
        });</script> {% endblock extraJS %}
