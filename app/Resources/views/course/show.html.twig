{% extends 'base.html.twig' %}
{% block iconHead %}
    <i class="fa fa-eye"></i>
{% endblock iconHead %}

{% block pageTitle %}
    {% trans %}Course{% endtrans %}
{% endblock pageTitle %}
{% block subtitle %}
    Visualizar
{% endblock subtitle %}
{% block titlePanel %}
    {% trans %}Course{% endtrans %}
{% endblock titlePanel %}
{% block action %}
    <div class="form-group form-actions">
    <div class="col-md-12 col-md-offset-6">
        <a href="{{ path('admin_course_index') }}" class="btn btn-sm btn-primary">
            <i class="hi hi-chevron-left"></i>
            Regresar
        </a> <a href="{{ path('admin_course_edit', { 'id': course.id }) }}" class="btn btn-sm btn-warning">
            <i class="gi gi-edit"></i>
            {% trans %}Edit{% endtrans %}
        </a></div>
    </div>{% endblock action %}
{% block bodyPanel %}
    <div class="table-responsive">
        <table class="table table-vcenter table-striped">
            <tbody>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>{% trans %}Description{% endtrans %}</th>
                <td>{{ course.description }}</td>
            </tr>
            {% for item in course.courseRangeWeeks  %}
                <tr>
                    <th>{% trans %}Price{% endtrans %}</th>
                    <td>{{ item.price |number_format(2, '.', ',')}}</td>
                </tr>
                <tr>
                    <th>{% trans %}Min{% endtrans %}</th>
                    <td>{{ item.min }}</td>
                </tr>
                <tr>
                    <th>{% trans %}Max{% endtrans %}</th>
                    <td>{{ item.max }}</td>
                </tr>
                <tr>
                    <th>{% trans %}Greater than{% endtrans %}</th>
                    <td>{{ item.greaterThan }}</td>
                </tr>
            {% endfor %}
            <tr>
                <th>{% trans %}Enable{% endtrans %}</th>
                <td>{% if course.enable %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>{% trans %}Headquarter{% endtrans %}</th>
                <td>{{ course.headquarter.name }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock bodyPanel %}
