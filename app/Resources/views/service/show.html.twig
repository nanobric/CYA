{% extends 'base.html.twig' %}
{% block iconHead %}
    <i class="fa fa-eye"></i>
{% endblock iconHead %}

{% block pageTitle %}
    Service
{% endblock pageTitle %}
{% block subtitle %}
    Visualizar
{% endblock subtitle %}
{% block titlePanel %}
    Service
{% endblock titlePanel %}
{% block action %}
    <div class="form-group form-actions">
    <div class="col-md-12 col-md-offset-6">
        <a href="{{ path('admin_service_index') }}" class="btn btn-sm btn-primary">
            <i class="hi hi-chevron-left"></i>
            Regresar
        </a> <a href="{{ path('admin_service_edit', { 'id': service.id }) }}" class="btn btn-sm btn-warning">
            <i class="gi gi-edit"></i>
            Edit
        </a></div>
    </div>{% endblock action %}
{% block bodyPanel %}
    <div class="table-responsive">
        <table class="table table-vcenter table-striped">
            <tbody>
            <tr>
                <td>{% trans %}Name
                {% endtrans %}</th>
                <td>{{ service.name }}</td>
            </tr>
            <tr>
                <td>{% trans %}Description
                {% endtrans %}</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
                <td>{% trans %}Price
                {% endtrans %}</th>
                <td>{{ service.price }}</td>
            </tr>
            <tr>
                <td>{% trans %}Headquarter
                {% endtrans %}</th>
                <td>{{ service.headquarter.name }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock bodyPanel %}
