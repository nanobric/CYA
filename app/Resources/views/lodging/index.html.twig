{% extends 'base.html.twig' %}
{% block iconHead %} <i class="gi gi-list"></i>{% endblock iconHead %}
{% block pageTitle %}
    Lodging
{% endblock pageTitle %}
{% block subtitle %} Lista {% endblock subtitle %}
    {% block action %}
        <div class="block-options pull-right">
            <a href="{{ path('admin_lodging_new') }}" data-original-title="Create a new entry"
               class="btn btn-alt btn-sm btn-success" data-toggle="tooltip" title=""><i class="fa fa-asterisk"></i></a>
        </div>
        {% endblock action %}
        {% block bodyPanel %}    <table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Price_per_week</th>
                <th>Description</th>
                <th>Headquarters_id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lodging in lodgings %}
            <tr>
                <td><a href="{{ path('admin_lodging_show', { 'id': lodging.id }) }}">{{ lodging.id }}</a></td>
                <td>{{ lodging.name }}</td>
                <td>{{ lodging.type }}</td>
                <td>{{ lodging.priceperweek }}</td>
                <td>{{ lodging.description }}</td>
                <td>{{ lodging.headquartersid }}</td>
                <td>                        <div class="btn-group">
                            <a href="{{ path('admin_lodging_show', { 'id': lodging.id }) }}" class="btn btn-xs btn-primary">show</a>
                        </div>                        <div class="btn-group">
                            <a href="{{ path('admin_lodging_edit', { 'id': lodging.id }) }}" class="btn btn-xs btn-primary">edit</a>
                        </div>                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock bodyPanel %}
{% block extraJS %} <script src="{{ asset('bundles/tscya/js/pages/tablesDatatables.js') }}"></script> <script>$(function(){ TablesDatatables.init(); });</script {% endblock extraJS %}
