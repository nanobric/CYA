{% extends 'base.html.twig' %}
{% block iconHead %}
<i class="fa fa-eye"></i>
{% endblock iconHead %}

{% block pageTitle %}
Lodging
{% endblock pageTitle %}
{% block subtitle %}
Visualizar
{% endblock subtitle %}
{% block titlePanel %}
Lodging
{% endblock titlePanel %}
{% block action %}
        <div class="form-group form-actions">
    <div class="col-md-12 col-md-offset-6">
        <a href="{{ path('admin_lodging_index') }}" class="btn btn-sm btn-primary">
            <i class="hi hi-chevron-left"></i>
            Regresar
        </a>            <a href="{{ path('admin_lodging_edit', { 'id': lodging.id }) }}" class="btn btn-sm btn-warning">
                <i class="gi gi-edit"></i>
                Edit
            </a>    </div>
</div>{% endblock action %}
{% block bodyPanel %}
    <div class="table-responsive">
        <table class="table table-vcenter table-striped">
            <tbody>
                <tr>
                    <th>Name</th>
                        <td>{{ lodging.name }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                        <td>{{ lodging.type }}</td>
                </tr>
                <tr>
                    <th>Price_per_week</th>
                        <td>{{ lodging.priceperweek }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                        <td>{{ lodging.description }}</td>
                </tr>
                <tr>
                    <th>Headquarters</th>
                        <td>{{ lodging.headquartersid }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock bodyPanel %}
