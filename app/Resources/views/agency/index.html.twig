{% extends 'base.html.twig' %}
{% block iconHead %} <i class="gi gi-list"></i>{% endblock iconHead %}
{% block pageTitle %}
    {% trans %}Agency{% endtrans %}
{% endblock pageTitle %}
{% block subtitle %} Lista {% endblock subtitle %}
    {% block action %}
        <div class="block-options pull-right">
            <a href="{{ path('agency_new') }}" data-original-title="Ingresar nuevo registro"
               class="btn btn-alt btn-sm btn-success" data-toggle="tooltip" title=""><i class="fa fa-asterisk"></i></a>
        </div>
    {% endblock action %}
        {% block titlePanel %}Agencias registradas{% endblock titlePanel %}
        {% block bodyPanel %}
            <table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
                <thead>
                <tr>
                    <th>{% trans %}Name{% endtrans %}</th>
                    <th>{% trans %}Sumer schedule start{% endtrans %}</th>
                    <th>{% trans %}Sumer schedule end{% endtrans %}</th>
                    <th>{% trans %}Actions{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for agency in agencies %}
                    <tr>
                        <td>{{ agency.name }}</td>
                        <td>{% if agency.sumerScheduleStart %}{{ agency.sumerScheduleStart|date('Y-m-d') }}{% endif %}</td>
                        <td>{% if agency.sumerScheduleEnd %}{{ agency.sumerScheduleEnd|date('Y-m-d') }}{% endif %}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('agency_show', { 'id': agency.id }) }}" class="btn btn-xs btn-primary">{% trans %}show{% endtrans %}</a>

                            </div>
                            <div class="btn-group">
                                <a href="{{ path('agency_edit', { 'id': agency.id }) }}" class="btn btn-xs btn-primary">{% trans %}edit{% endtrans %}</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endblock bodyPanel %}
{% block extraJS %}
    <script src="{{ asset('bundles/tscya/js/pages/tablesDatatables.js') }}"></script>
    <script>$(function () {
            TablesDatatables.init();
        });</script>
{% endblock extraJS %}
