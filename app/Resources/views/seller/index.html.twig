{% extends 'base.html.twig' %}
{% block iconHead %} <i class="gi gi-list"></i>{% endblock iconHead %}
{% block pageTitle %}
    Seller
{% endblock pageTitle %}
{% block subtitle %} Lista {% endblock subtitle %}
    {% block action %}
        <div class="block-options pull-right">
            <a href="{{ path('admin_seller_new') }}" data-original-title="Create a new entry"
               class="btn btn-alt btn-sm btn-success" data-toggle="tooltip" title=""><i class="fa fa-asterisk"></i></a>
        </div>
        {% endblock action %}
        {% block bodyPanel %}    <table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>First_name</th>
                <th>Last_name</th>
                <th>Indentification</th>
                <th>Telephone</th>
                <th>Adress</th>
                <th>Notes</th>
                <th>Enable</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seller in sellers %}
            <tr>
                <td><a href="{{ path('admin_seller_show', { 'id': seller.id }) }}">{{ seller.id }}</a></td>
                <td>{{ seller.firstname }}</td>
                <td>{{ seller.lastname }}</td>
                <td>{{ seller.indentification }}</td>
                <td>{{ seller.telephone }}</td>
                <td>{{ seller.adress }}</td>
                <td>{{ seller.notes }}</td>
                <td>{% if seller.enable %}Yes{% else %}No{% endif %}</td>
                <td>                        <div class="btn-group">
                            <a href="{{ path('admin_seller_show', { 'id': seller.id }) }}" class="btn btn-xs btn-primary">show</a>
                        </div>                        <div class="btn-group">
                            <a href="{{ path('admin_seller_edit', { 'id': seller.id }) }}" class="btn btn-xs btn-primary">edit</a>
                        </div>                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock bodyPanel %}
{% block extraJS %} <script src="{{ asset('bundles/tscya/js/pages/tablesDatatables.js') }}"></script> <script>$(function(){ TablesDatatables.init(); });</script {% endblock extraJS %}
