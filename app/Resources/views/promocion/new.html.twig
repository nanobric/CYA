{% extends 'base.html.twig' %}
{% block MenuCatalog %} class="sidebar-nav-menu open" {% endblock MenuCatalog %}
{% block MenuPromocion %} class="active" {% endblock MenuPromocion %}
{% block ulCatalog %} style="display: block;" {% endblock ulCatalog %}

{% block iconHead %}
    <i class="fa fa-asterisk"></i>
{% endblock iconHead %}

{% block pageTitle %}
    {% trans %}Promotion{% endtrans %}
{% endblock pageTitle %}
{% block subtitle %}
    Crear
{% endblock subtitle %}

{% block titlePanel %}
    Ingreso {% trans %}Promotion{% endtrans %}
{% endblock titlePanel %}
{% block action %}{% endblock action %}
{% block bodyPanel %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal form-bordered'} }) }}
    {{ form_widget(form) }}
    <div class="form-group">
        <div class="col-md-12 col-md-offset-6">
            <input type="submit" value="{% trans %}Create{% endtrans %}" class="btn btn-sm btn-success"/>
        </div>
    </div>
    <div class="form-group form-actions">
    <div class="col-md-12 col-md-offset-6">
        <a href="{{ path('admin_promocion_index') }}" class="btn btn-sm btn-primary">
            <i class="hi hi-chevron-left"></i>
            Regresar
        </a></div>
    </div>{{ form_end(form) }}
{% endblock bodyPanel %}
{% block extraJS %}
    <script type="text/javascript">
        var $course = $("#promocion_course");
        var $package = $("#promocion_package");
        var $exam = $("#promocion_exam");

        $course.change(function(){
            var value = $(this).val();
            if (value != '') {
                $package.prop("disabled", true);
                $exam.prop("disabled", true);
            } else {
                $package.prop("disabled", false);
                $exam.prop("disabled", false);
            }
        });
        $package.change(function(){
            var value = $(this).val();
            if (value != '') {
                $course.prop("disabled", true);
                $exam.prop("disabled", true);
            } else {
                $course.prop("disabled", false);
                $exam.prop("disabled", false);
            }
        });
        $exam.change(function(){
            var value = $(this).val();
            if (value != '') {
                $package.prop("disabled", true);
                $course.prop("disabled", true);
            } else {
                $package.prop("disabled", false);
                $course.prop("disabled", false);
            }
        });
    </script>
{% endblock extraJS %}
