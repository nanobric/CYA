{% extends 'base.html.twig' %}
{% block MenuCatalog %} class="sidebar-nav-menu open" {% endblock MenuCatalog %}
{% block MenuExam %} class="active" {% endblock MenuExam %}
{% block ulCatalog %} style="display: block;" {% endblock ulCatalog %}

{% block iconHead %} <i class="gi gi-list"></i>{% endblock iconHead %}
{% block pageTitle %}
    {% trans %}Exam{% endtrans %}
{% endblock pageTitle %}
{% block subtitle %} Lista {% endblock subtitle %}
    {% block action %}
        <div class="block-options pull-right">
            <a href="{{ path('admin_exam_new') }}" data-original-title="Create a new entry"
               class="btn btn-alt btn-sm btn-success" data-toggle="tooltip" title=""><i class="fa fa-asterisk"></i></a>
        </div>
    {% endblock action %}
        {% block titlePanel %}Examenes registrados{% endblock titlePanel %}
        {% block bodyPanel %}
            <table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
                <thead>
                <tr>
                    <th>{% trans %}Name{% endtrans %}</th>
                    <th>{% trans %}Description{% endtrans %}</th>
                    <th>{% trans %}Enable{% endtrans %}</th>
                    <th>{% trans %}Headquarter{% endtrans %}</th>
                    <th>{% trans %}Actions{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for exam in exams %}
                    <tr>
                        <td>{{ exam.name }}</td>
                        <td>{{ exam.description }}</td>
                        <td>{% if exam.enable %}Si{% else %}No{% endif %}</td>
                        <td>{{ exam.headquarter.name }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('admin_exam_show', { 'id': exam.id }) }}"
                                   class="btn btn-xs btn-primary">{% trans %}show{% endtrans %}</a>
                            </div>
                            <div class="btn-group">
                                <a href="{{ path('admin_exam_edit', { 'id': exam.id }) }}"
                                   class="btn btn-xs btn-primary">{% trans %}edit{% endtrans %}</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endblock bodyPanel %}
{% block extraJS %}
    <script src="{{ asset('bundles/tscya/js/pages/tablesDatatables.js') }}"></script>
    <script>$(function () {
            TablesDatatables.init();
        });</script> {% endblock extraJS %}
