{% extends 'base.html.twig' %}
{% block MenuCatalog %} class="sidebar-nav-menu open" {% endblock MenuCatalog %}
{% block MenuCountry %} class="active" {% endblock MenuCountry %}
{% block ulCatalog %} style="display: block;" {% endblock ulCatalog %}

{% block iconHead %} <i class="gi gi-list"></i>{% endblock iconHead %}
{% block pageTitle %}
    {% trans %}Country{% endtrans %}
{% endblock pageTitle %}
{% block subtitle %} Lista {% endblock subtitle %}
{% block action %}
    <div class="block-options pull-right">
        <a href="{{ path('admin_country_new') }}" data-original-title="Ingresar nuevo registro"
           class="btn btn-alt btn-sm btn-success" data-toggle="tooltip" title=""><i class="fa fa-asterisk"></i></a>
    </div>
{% endblock action %}
{% block titlePanel %}paises registrados{% endblock titlePanel %}
{% block bodyPanel %}
    <table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
        <thead>
        <tr>
            <th>{% trans %}Code{% endtrans %}</th>
            <th>{% trans %}Name{% endtrans %}</th>
            <th>{% trans %}Description{% endtrans %}</th>
            <th>{% trans %}Coin{% endtrans %}</th>
            <th>{% trans %}Actions{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td>{{ country.code }}</td>
                <td>{{ country.name }}</td>
                <td>{{ country.description }}</td>
                <td>{{ country.coin.name }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('admin_country_show', { 'id': country.id }) }}" class="btn btn-xs btn-primary">{% trans %}show{% endtrans %}</a>
                        <a href="{{ path('admin_country_edit', { 'id': country.id }) }}" class="btn btn-xs btn-primary">{% trans %}edit{% endtrans %}</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock bodyPanel %}
{% block extraJS %}
    <script src="{{ asset('bundles/tscya/js/pages/tablesDatatables.js') }}"></script>
    <script>$(function () {
            TablesDatatables.init();
        });</script>
{% endblock extraJS %}
