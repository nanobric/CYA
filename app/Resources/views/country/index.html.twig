{% extends 'base.html.twig' %}
{% block iconHead %} <i class="gi gi-list"></i>{% endblock iconHead %}
{% block pageTitle %}
    Country
{% endblock pageTitle %}
{% block subtitle %} Lista {% endblock subtitle %}
    {% block action %}
        <div class="block-options pull-right">
            <a href="{{ path('admin_country_new') }}" data-original-title="Create a new entry"
               class="btn btn-alt btn-sm btn-success" data-toggle="tooltip" title=""><i class="fa fa-asterisk"></i></a>
        </div>
        {% endblock action %}
        {% block bodyPanel %}    <table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Description</th>
                <th>Coin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td>{{ country.code }}</td>
                <td>{{ country.name }}</td>
                <td>{{ country.description }}</td>
                <td>{{ country.coin.name }}</td>
                <td>                        <div class="btn-group">
                            <a href="{{ path('admin_country_show', { 'id': country.id }) }}" class="btn btn-xs btn-primary">show</a>
                        </div>                        <div class="btn-group">
                            <a href="{{ path('admin_country_edit', { 'id': country.id }) }}" class="btn btn-xs btn-primary">edit</a>
                        </div>                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock bodyPanel %}
{% block extraJS %} <script src="{{ asset('bundles/tscya/js/pages/tablesDatatables.js') }}"></script> <script>$(function(){ TablesDatatables.init(); });</script {% endblock extraJS %}
